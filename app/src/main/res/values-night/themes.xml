<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.FinanceManager." parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding color for the app -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- Darker variant of the primary color -->
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <!-- Accent color for highlights and accents -->
        <item name="colorAccent">@color/accentColor</item>
        <!-- Background color for the app -->
        <item name="android:colorBackground">@color/darkBackgroundColor</item>
        <!-- Surface color for components like cards and menus -->
        <item name="colorSurface">@color/darkSurfaceColor</item>

        <!-- Primary text color -->
        <item name="android:textColorPrimary">@color/darkPrimaryTextColor</item>
        <!-- Secondary text color -->
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <!-- Enable or disable the action bar -->
        <item name="windowNoTitle">true</item>
        <!-- Background color for the window -->
        <item name="android:windowBackground">@color/off_black</item>
        <!-- Color of the status bar -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <!-- Color of the navigation bar -->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <!-- Default font family -->
        <item name="android:fontFamily">monospace</item>


    </style>
</resources>
